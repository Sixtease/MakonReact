{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [1, "prefer-single"],
    "react/jsx-indent"     : [1, 4],
    "max-len"              : [1, 120, 2],
    "object-curly-spacing" : [1, "always"],
    "comma-dangle": [1, "always-multiline"],
    "semi": [1,"always"],
    "camelcase": [1,{"properties":"never"}],
    "indent": [1,4]
  },
}
